<?xml version="1.0" standalone="no"?>

<unit>

	<parameters>
		<size value="1"/>
		<height value="2"/>
		<max-hp value="700" regeneration="1"/>
		<max-ep value="0" regeneration="0"/>
		<armor value="12"/>
		<armor-type value="leather"/>					
		<sight value="13"/>
		<time value="20"/>	
		<multi-selection value="true"/>	
		<cellmap value="false"/>
		<levels/>
		<fields>
			<field value="land"/>
		</fields>	
		<properties/>
		<light enabled="false"/>
		<unit-requirements>
			<!--unit name="bonfire"/-->
		</unit-requirements>
		<upgrade-requirements>
			<upgrade name="fire"/>
			<upgrade name="tactics"/>
		</upgrade-requirements>
		<resource-requirements>
			<resource name="gold" amount="75"/>
			<resource name="wood" amount="25"/>
			<resource name="food" amount="1"/>
		</resource-requirements>
		<resources-stored/>
		<image path="images/summoner.bmp"/>
		<image-cancel path="../servant/images/tech_cancel.bmp"/>
		<meeting-point value="false"/>
		<selection-sounds enabled="true">
			<sound path="$COMMONDATAPATH/sounds/select1.wav"/>
			<sound path="../swordman/sounds/select1b.wav"/>
			<sound path="../swordman/sounds/select2.wav"/>
			<sound path="$COMMONDATAPATH/sounds/select3.wav"/>
			<sound path="../swordman/sounds/select4.wav"/>
			<sound path="../swordman/sounds/select5.wav"/>
			<sound path="../swordman/sounds/select5b.wav"/>
			<sound path="../swordman/sounds/select6.wav"/>
			<sound path="$COMMONDATAPATH/sounds/select7.wav"/>
		</selection-sounds>
		<command-sounds enabled="true">
			<sound path="$COMMONDATAPATH/sounds/ack1.wav"/>
			<sound path="../swordman/sounds/ack1b.wav"/>
			<sound path="$COMMONDATAPATH/sounds/ack3.wav"/>
			<sound path="../swordman/sounds/ack3b.wav"/>
			<sound path="$COMMONDATAPATH/sounds/ack4.wav"/>
			<sound path="../swordman/sounds/ack4b.wav"/>
			<sound path="$COMMONDATAPATH/sounds/ack5.wav"/>
			<sound path="$COMMONDATAPATH/sounds/ack6.wav"/>
			<sound path="../swordman/sounds/ack7.wav"/>	
		</command-sounds>
	</parameters>

	<skills>
	
		<skill>
			<type value="stop"/>
			<name value="stop_skill"/>		
			<ep-cost value="0"/>
			<speed value="1000"/>
			<anim-speed value="40"/>
			<animation path="models/torchman_stand.g3d"/>
			<animation path="models/torchman_down.g3d"/>
			<animation path="models/torchman_look.g3d"/>
			<particles value="true">
				<particle-file path="glow_particles.xml"/>
				<particle-file path="spark_particles.xml"/>
				<particle-file path="flame_particles.xml"/>
			</particles>
			<sound enabled="false"/>
		</skill>

		<skill>
			<type value="stop"/>
			<name value="hold_skill"/>		
			<ep-cost value="0"/>
			<speed value="1000"/>
			<anim-speed value="250"/>
			<animation path="models/torchman_hold.g3d"/>
			<particles value="true">
				<particle-file path="flm3.xml"/>
			</particles>
			<sound enabled="true" start-time="0.47">
				<sound-file path="../swordman/sounds/yelling/1.wav"/>
				<sound-file path="../swordman/sounds/yelling/2.wav"/>
				<sound-file path="../swordman/sounds/yelling/3.wav"/>
				<sound-file path="../swordman/sounds/yelling/4.wav"/>
			</sound> 
		</skill>

		<skill>
			<type value="move"/>
			<name value="charge_skill"/>		
			<ep-cost value="0"/>
			<speed value="230"/>
			<anim-speed value="135"/>
			<animation path="models/torchman_walk.g3d"/>
			<particles value="true">
				<particle-file path="glow_particles.xml"/>
				<particle-file path="spark_particles.xml"/>
				<particle-file path="flame_particles.xml"/>
			</particles>
			<sound enabled="false"/>
		</skill>
		
		<skill>
			<type value="move"/>
			<name value="move_skill"/>		
			<ep-cost value="0"/>
			<speed value="220"/>
			<anim-speed value="120"/>
			<animation path="models/torchman_walk.g3d"/>
			<particles value="true">
				<particle-file path="glow_particles.xml"/>
				<particle-file path="spark_particles.xml"/>
				<particle-file path="flame_particles.xml"/>
			</particles>
			<sound enabled="false"/>
		</skill>

		<skill>
			<type value="attack"/>
			<name value="attack_skill"/>		
			<ep-cost value="0"/>
			<speed value="70"/>
			<anim-speed value="70"/>
			<animation path="models/torchman_attack.g3d"/>
			<sound enabled="true" start-time="0.5">
				<sound-file path="sounds/t1.wav"/>
				<sound-file path="sounds/t2.wav"/>
				<sound-file path="sounds/t3.wav"/>
				<sound-file path="sounds/t4.wav"/>
			</sound>
			<attack-strenght value="170"/>
			<attack-var value="50"/>
			<attack-range value="1"/>
			<attack-type value="energy"/>
			<attack-fields>
				<field value="land"/>
			</attack-fields>
			<attack-start-time value="0.5"/>
			<projectile value="true">
				<particle value="false"/>
				<sound enabled="true">
					<sound-file path="sounds/golem_walk1.wav"/>
					<sound-file path="sounds/golem_walk2.wav"/>
				</sound>
			</projectile>
			<splash value="true">
				<radius value="0"/>
				<damage-all value="true"/>
				<particle value="true" path="particle_splash.xml"/>
			</splash>
		</skill>

		<skill>
			<type value="die"/>
			<name value="die_skill"/>		
			<ep-cost value="0"/>
			<speed value="80"/>
			<anim-speed value="80"/>
			<animation path="models/torchman_die.g3d"/>
			<sound enabled="true" start-time="0">
				<sound-file path="$COMMONDATAPATH/sounds/die1.wav"/>
				<sound-file path="$COMMONDATAPATH/sounds/die2.wav"/>
			</sound>			
			<fade value="false"/>
		</skill>

	</skills>

	<commands>
	
		<command>
			<type value="stop"/>
			<name value="stop"/>
			<image path="../servant/images/tech_stop.bmp"/>
			<unit-requirements/>
			<upgrade-requirements/>
			<stop-skill value="stop_skill"/>
		</command>

		<command>
			<type value="move"/>
			<name value="move"/>
			<image path="../servant/images/tech_move.bmp"/>
			<unit-requirements/>
			<upgrade-requirements/>
			<move-skill value="move_skill"/>
		</command>

		<command>
			<type value="attack"/>
			<name value="attack"/>
			<image path="images/summoner_attack.bmp"/>
			<unit-requirements/>
			<upgrade-requirements/>
			<move-skill value="charge_skill"/>
			<attack-skill value="attack_skill"/>
		</command>

		
		<command>
			<type value="attack_stopped"/>
			<name value="hold_position"/>
			<image path="../servant/images/tech_hold.bmp"/>
			<unit-requirements/>
			<upgrade-requirements>
			</upgrade-requirements>
			<stop-skill value="hold_skill"/>
			<attack-skill value="attack_skill"/>
		</command>	

	</commands>

</unit>
