<?xml version="1.0" standalone="no" ?>
<unit>
	<!-- *** parameters *** -->
	<parameters>
		<size value="4" />
		<height value="2" />
		<max-hp value="4000" regeneration="0"/>
		<max-ep value="0" />
		<armor value="0" />
		<armor-type value="wood"/>				
		<sight value="8" />
		<time value="35" />
		<multi-selection value="false" />
		<cellmap value="true">
			<row value="1111" /> 
			<row value="1111" /> 
			<row value="1001" /> 
			<row value="1011" />
		</cellmap>
		<levels/>
		<fields>
			<field value="land" />
		</fields>
		<properties>
			<property value="burnable"/>
		</properties>
		<light enabled="false" />
		<unit-requirements>
			<unit name="fortress" />
		</unit-requirements>
		<upgrade-requirements />
		<resource-requirements>
			<resource name="gold" amount="100"/>
			<resource name="wood" amount="150"/>
			<resource name="food" amount="-15"/>
		</resource-requirements>
		<resources-stored>
			<resource name="food" amount="50"/>
