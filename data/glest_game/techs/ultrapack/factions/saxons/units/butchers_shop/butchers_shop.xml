		<selection-sounds enabled="true">
			<sound path="$COMMONDATAPATH/sounds/tech_click.wav"/>
		</selection-sounds>
		<command-sounds enabled="true">
			<sound path="$COMMONDATAPATH/sounds/tech_click.wav"/>
		</command-sounds>
	</parameters>
	
	<!-- *** skills *** -->
	<skills>

		<skill>
			<type value="be_built" />
			<name value="be_built_skill"/>		
			<ep-cost value="0" />
			<speed value="300"/>
			<anim-speed value="50" />
			<animation path="models/bshop_build_full.g3d" minHp="3001" maxHp="4000"/>
			<animation path="models/bshop_build_med.g3d" minHp="2001" maxHp="3000"/>
			<animation path="models/bshop_build_small.g3d" minHp="1001" maxHp="2000"/>
			<animation path="models/bshop_build_none.g3d" minHp="1" maxHp="1000"/>
			<sound enabled="false" />
		</skill>
		
		<skill>
			<type value="stop" />
			<name value="stop_skill"/>		
			<ep-cost value="0" />
			<speed value="300" />
			<anim-speed value="50" />
			<animation path="models/bshop_sit.g3d" minHp="3001" maxHp="4000"/>
			<animation path="models/bshop_hit1.g3d" minHp="2001" maxHp="3000"/>
			<animation path="models/bshop_hit2.g3d" minHp="1001" maxHp="2000"/>
			<animation path="models/bshop_hit3.g3d" minHp="1" maxHp="1000"/>
			<sound enabled="false" />
		</skill>	
		
		<skill>
			<type value="produce" />
			<name value="produce_skill"/>		
			<ep-cost value="0" />
			<speed value="300" />
			<anim-speed value="50" />
			<animation-random-cycle-maxcount value="1" />
			<animation path="models/bshop_produce1.g3d" />
			<animation path="models/bshop_produce2.g3d" />
			<sound enabled="false" />
		</skill>	
		
		<skill>
			<type value="die" />
			<name value="die_skill"/>		
			<ep-cost value="0" />
			<speed value="30" />
			<anim-speed value="30" />
			<animation path="models/bshop_die1.g3d" />
			<sound enabled="true" start-time="0">
				<sound-file path="$COMMONDATAPATH/sounds/tech_building_fall3.wav"/>
			</sound>			
			<fade value="false"/>
		</skill>

                <skill>
			<type value="upgrade"/>
			<name value="upgrade_skill"/>		
			<ep-cost value="0"/>
			<speed value="300"/>
			<anim-speed value="300"/>
			<animation path="models/bshop_sit.g3d" minHp="3001" maxHp="4000"/>
			<animation path="models/bshop_hit1.g3d" minHp="2001" maxHp="3000"/>
			<animation path="models/bshop_hit2.g3d" minHp="1001" maxHp="2000"/>
			<animation path="models/bshop_hit3.g3d" minHp="1" maxHp="1000"/>
			<sound enabled="false"/>
		</skill>

	</skills>
	
	<!-- *** commands *** -->
	<commands>

		<command>
			<type value="produce"/>
			<name value="buy_meat" />
			<image path="../meat/images/swordman.bmp" />
			<unit-requirements />
			<upgrade-requirements />
			<produce-skill value="produce_skill"/>
			<produced-unit name="meat"/>
		</command>
	
